# ---------------------------
# React SPA routing (history mode)
# ---------------------------
RewriteEngine On

# Si el archivo o carpeta existe, servirlo directo
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Si no existe, mandar todo a index.html
RewriteRule ^ index.html [L]


# ---------------------------
# Security headers (básicos y seguros)
# ---------------------------
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>


# ---------------------------
# Compression (gzip/brotli si está disponible)
# ---------------------------
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript
</IfModule>


# ---------------------------
# Cache estático (muy importante para React build)
# ---------------------------
<IfModule mod_expires.c>
  ExpiresActive On

  # HTML: no cache agresivo (para que se actualice el shell)
  ExpiresByType text/html "access plus 0 seconds"

  # Assets versionados (JS/CSS/imagenes): cache largo
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/json "access plus 0 seconds"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
</IfModule>
